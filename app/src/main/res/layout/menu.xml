<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Table Number Display -->
    <TextView
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Table"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:paddingBottom="12dp" />

    <!-- Category Buttons at Top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:layout_marginBottom="16dp"
        android:padding="6dp"
        android:background="#EEEEEE"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btn_food"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:src="@drawable/food"
            android:padding="10dp"
            android:background="@drawable/bg_circle_white"
            android:contentDescription="Food" />

        <ImageView
            android:id="@+id/btn_drink"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:src="@drawable/cheers"
            android:padding="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_circle_white"
            android:contentDescription="Drink" />

        <ImageView
            android:id="@+id/btn_smoke"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:src="@drawable/cigarrete"
            android:padding="10dp"
            android:background="@drawable/bg_circle_white"
            android:contentDescription="Smoke" />

        <ImageView
            android:id="@+id/btn_special"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:src="@drawable/special"
            android:padding="10dp"
            android:background="@drawable/bg_circle_white"
            android:contentDescription="Special" />
    </LinearLayout>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F8F8F8"
        android:elevation="4dp" />

    <!-- View Cart Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/view_cart_button"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Order"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/teal_700"
        android:insetTop="8dp"
        android:insetBottom="8dp"
        android:elevation="6dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        app:icon="@drawable/ic_cart"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@android:color/white" />
</LinearLayout>
