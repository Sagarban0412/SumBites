<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Row 1: Name + Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/menu_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delicious Burger"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/menu_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 250"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Row 2: Quantity Selector + Add Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Quantity selector -->
            <LinearLayout
                android:id="@+id/quantity_selector_container"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/quantity_selector_bg_modern"
                android:padding="4dp"
                android:layout_marginEnd="16dp"
                android:elevation="2dp">

                <ImageView
                    android:id="@+id/menu_item_reduce"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:src="@drawable/ic_remove_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Reduce quantity"
                    card_view:tint="#388E3C" />

                <TextView
                    android:id="@+id/menu_item_count"
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif-medium" />

                <ImageView
                    android:id="@+id/menu_item_add"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:src="@drawable/ic_add_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add quantity"
                    card_view:tint="#388E3C" />
            </LinearLayout>

            <!-- Flexible space pushes ADD button to right -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Add Button -->
            <Button
                android:id="@+id/menu_item_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="ADD"
                android:textAllCaps="true"
                android:backgroundTint="#388E3C"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-medium"
                android:textSize="16sp"
                android:elevation="4dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:stateListAnimator="@null" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
