<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Item Name -->
        <TextView
            android:id="@+id/menu_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121" />

        <!-- Price and Quantity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:weightSum="1">

            <!-- Price -->
            <TextView
                android:id="@+id/menu_item_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Rs. 0.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#757575" />

            <!-- Spacer -->
            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <!-- Quantity selector container -->
            <LinearLayout
                android:id="@+id/quantity_selector_container"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/quantity_selector_bg"
                android:padding="4dp"
                android:elevation="2dp"
                android:clipToPadding="false"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/menu_item_reduce"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="-"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#388E3C"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="0dp"
                    android:minWidth="40dp"
                    android:minHeight="40dp" />

                <TextView
                    android:id="@+id/menu_item_count"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#212121" />

                <TextView
                    android:id="@+id/menu_item_add"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:text="+"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#388E3C"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="0dp"
                    android:minWidth="40dp"
                    android:minHeight="40dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Add Button -->
        <Button
            android:id="@+id/menu_item_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD"
            android:textAllCaps="true"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:backgroundTint="#388E3C"
            android:textColor="@android:color/white"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
